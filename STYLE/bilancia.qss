    color: #e74c3c;
    font-weight: bold;
}

QLabel#numero_basso {
    background-color: #ffffff;
    font-size: 60px;
    color: #e07468;
    font-weight: bold;
}

QLabel#no {
    background-color: #ffffff;
    font-size: 25px;
    color: #e74c3c;
    font-weight: bold;
}


QLabel#bilancia {
    background-color: #ffffff;
    font-size: 25px;
    color: #7f8c8d;
}
QLabel#stato_label {
    background-color: #ffffff;
    font-size: 16px;
    color: #7f8c8d;
}
QLabel#stato_value_ok {
    background-color: #ffffff;
    font-size: 16px;
    font-weight: bold;
