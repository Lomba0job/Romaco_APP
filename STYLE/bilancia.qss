}

QPushButton#tara, QPushButton#calibrazione {

    background-color: #ecf0f1;
    border: 1px solid #bdc3c7;
    border-radius: 4px;
    color: #5D5D5D;
    font-size: 25px;
    padding: 10px;
}

QPushButton#tara_bassa, QPushButton#calibrazione_bassa {

    background-color: #ffffff;
    border: 1px solid #bdc3c7;
    border-radius: 4px;
    color: #c9c9c9;
    font-size: 25px;
    padding: 10px;
}

QLabel#indice {
    background-color: #ffffff;
    color: #7f8c8d;
    font-size: 20px;
}

QDoubleSpinBox {
    background-color: #ffffff;
    font-size: 20px;
    color: #7f8c8d;
}